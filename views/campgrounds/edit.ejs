<%- include('../partials/header.ejs') %>
	
<div class='row'>
	
<h1 style='text-align: center; margin-bottom:40px;'>Edit <%= camp.name %></h1>
	<div style='margin: 0 auto; width: 30%'>
		
<form action='/campgrounds/<%= camp._id %>?_method=PUT' method='POST'>
	<div class='form-group'>
			<input class="form-control" type='text' name='campground[name]' value='<%= camp.name %>'>
	</div>
	<div class='form-group'>
			<input  class="form-control" type='text' name='campground[image]' value='<%= camp.image %>'>
	</div>
		<div class='form-group'>
		<input  class="form-control" type='number' name='campground[price]' value='<%= camp.price %>' min='0.1' step='0.1'>
	</div>
		<div class='form-group'>
			<textarea name='campground[description]' style='width:100%; height:10em'><%= camp.description %></textarea> 
	</div>
	<div class='form-group'>

	<input class='btn btn-lg btn-primary btn-block' type='submit'>
	</div>
</form>

<a href='/campgrounds'>Go Back</a>
	</div>
	</div>


<%- include('../partials/footer.ejs') %>